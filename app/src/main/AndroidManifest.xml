<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helloworld">

    <service android:name=".MyFirebaseInstanceIDService">
        <intent-filter>
            <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
        </intent-filter>
    </service>
   <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity"
            android:exported="true"/>
        <activity
            android:name=".CreateGroup"
            android:label="@string/title_activity_create_group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GroupNameScreen"
            android:label="@string/title_activity_group_name_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchScreen"
            android:label="@string/title_activity_search_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PushActivity" />
        <activity
            android:name=".MyEvents"
            android:label="@string/title_activity_my_events"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>

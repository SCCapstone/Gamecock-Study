<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.sc.cse.CreateGroup"
    tools:showIn="@layout/activity_event_screen"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:id="@+id/course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="35sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="#D7D7D7"
                android:textColor="@color/colorPrimary"
                android:inputType="textShortMessage" />


            <TextView
                android:id="@+id/event_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:textSize="18sp"
                android:layout_weight="1"
                android:inputType="date" />

            <TextView
                android:id="@+id/event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="time" />


            <TextView
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:textSize="18sp"
                android:ems="10"
                android:inputType="textShortMessage" />

            <TextView
                android:id="@+id/event_host"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:textSize="18sp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/event_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                android:ems="10"
                android:inputType="textMultiLine" />


            <Button
                android:id="@+id/eventC"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/button_shape"
                android:onClick="StudyEventButton"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Email"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp"
                android:layout_weight="0.09" />

            <Button
                android:id="@+id/eventB"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:onClick="StudyEventButton"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Delete"
                android:textColor="#FFFFFFFF"
                android:textSize="30sp"
                android:layout_weight="0.09" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
